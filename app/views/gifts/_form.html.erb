  <div class="group">
    <%= f.label :name, t("activerecord.attributes.gift.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :description, t("activerecord.attributes.gift.description", :default => "Description"), :class => :label %>
    <%= f.text_area :description, :class => 'text_area' %>
  </div>

  <div class="group">
    <%= f.label :url, t("activerecord.attributes.gift.url", :default => "Url"), :class => :label %>
    <%= f.text_field :url, :class => 'text_field' %>
    <span class="description">Ex: http://google.com</span>
  </div>

  <div class="group">
    <%= f.label :price, t("activerecord.attributes.gift.price", :default => "Price"), :class => :label %>
    <%= f.text_field :price, :class => 'text_field' %>
    <span class="description">Leave off the $</span>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
