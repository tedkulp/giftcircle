<div class="block">
  <div class="content">
    <h2 class="title">Change your password</h2>
    <div class="inner">
      <div>
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form' }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="group">
            <%= f.label :password, :class => 'label' %>
            <%= f.password_field :password, :class => 'text_field' %>
          </div>

          <div class="group">
            <%= f.label :password_confirmation, :class => 'label' %>
            <%= f.password_field :password_confirmation, :class => 'text_field' %>
          </div>

          <button class="button" type="submit">
            <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.change_password", :default => "Change my password")}") %> <%= t("web-app-theme.change_password", :default => "Change my password") %>
          </button>
        <% end %>
        <%= render :partial => "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
