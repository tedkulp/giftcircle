  <h1 style="text-align: center;">Gift Circle</h1>
  <div class="block" id="block-signup">
    <h2>Registration</h2>
    <div class="content">
      <div class="flash">
        <% flash.each do |type, message| -%>
        <div class="message <%= type %>">
          <p><%= message %></p>
        </div>
        <% end -%>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form'}) do |f| -%>
    
        <%= devise_error_messages! %>
    
        <div class="group wat-cf">
          <div class="left">
            <label class="label">Email</label>
          </div>
          <div class="right">
            <%= f.text_field :email, :class => 'text_field' %>
          </div>
        </div>
        <div class="group wat-cf">
          <div class="left">
            <label class="label">First Name</label>
          </div>
          <div class="right">
            <%= f.text_field :first_name, :class => 'text_field' %>
          </div>
        </div>
        <div class="group wat-cf">
          <div class="left">
            <label class="label">Last Name</label>
          </div>
          <div class="right">
            <%= f.text_field :last_name, :class => 'text_field' %>
          </div>
        </div>
        <div class="group wat-cf">
          <div class="left">
            <label class="label">Password</label>                
          </div>
          <div class="right">
            <%= f.password_field :password, :class => 'text_field' %>
          </div>              
        </div>
        <div class="group wat-cf">
          <div class="left">
            <label class="label">Password Again</label>
          </div>
          <div class="right">
            <%= f.password_field :password_confirmation, :class => 'text_field' %>
          </div>              
        </div>
        <div class="group wat-cf">
          <div class="left">
            <label class="label">Secret Code</label>
          </div>
          <div class="right">
            <%= f.text_field :secret_code, :class => 'text_field' %>
          </div>              
        </div>
      
        <div class="group navform wat-cf">
          <div class="right">
            <button class="button" type="submit">
              <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.register", :default => "Register")}") %> <%= t("web-app-theme.register", :default => "Register") %>
            </button>
          </div>
        </div>
      <% end -%>
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
